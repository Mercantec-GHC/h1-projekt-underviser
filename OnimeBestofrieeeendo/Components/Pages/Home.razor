                    <option value="None">No sorting</option>
                    <option value="PriceAsc">Price ‚Üë</option>
                    <option value="PriceDesc">Price ‚Üì</option>
                    <option value="NameAsc">Name A ‚Üí Z</option>
                    <option value="NameDesc">Name Z ‚Üí A</option>
                    <option value="RarityAsc">Rarity ‚Üë</option>
                    <option value="RarityDesc">Rarity ‚Üì</option>
                </select>
            </div>
            <div class="products-grid">
                @foreach (var product in _shopProducts)
                {
                    <div class="product-card">
                        <div class="product-image-wrapper">
                            <img src="@product.ImageUrl" alt="@product.Name"/>
                        </div>
                        <div class="product-info">
                            <h3 class="product-title">@product.Name</h3>
                            <span class="product-price">@product.Price DKK</span>
                            <div class="product-actions">
                                <button class="btn-add-cart" @onclick="() => BuyProduct(product)">K√∏be</button>
                                <button class="btn-read-more" @onclick="() => ShowProductDetails(product)">Beskrivelse</button>
