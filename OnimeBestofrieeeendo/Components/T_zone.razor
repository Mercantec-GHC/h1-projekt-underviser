@rendermode InteractiveServer
@inject DbService DbService
@inject NavigationManager Navigation
@layout MyLayout
@page "/test"

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: auto;
        min-height: 100%;
        overflow-x: hidden;
        overflow-y: auto;
    }

    body {
        background: transparent;
        font-family: 'Segoe UI', Arial, sans-serif;
        color: #222;
    }

    #welcome-msg {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
        margin-bottom: 32px;
    }

        #welcome-msg h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
        }

    #create-btn {
        background: #59CCCC;
        color: #1e1e1e;
        border: none;
        border-radius: 8px;
        padding: 10px 24px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: background 0.2s, color 0.2s;
    }

        #create-btn:hover {
            background: #48bbbb;
            color: #fff;
        }

    /* products section */
    #prods-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 24px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto 40px auto;
        background: none;
        padding: 0 16px;
    }

    /* product card */
    .prod-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.10);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding-bottom: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }


        .prod-card:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 8px 24px rgba(0,0,0,0.16);
        }

    /* product image */
    .img-containter {
        width: 100%;
        height: 300px;
        background: #f3f3f3;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .img-containter img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    /* product info */
    .prod-info {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 12px 16px 0 16px;
        width: 100%;
    }


    .prod-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 2px;
    }

    .prod-price {
        font-size: 0.95rem;
        color: #59CCCC;
        font-weight: 500;
    }

    /* action buttons */
    .prod-actions {
        display: flex;
        gap: 8px;
        margin-top: 10px;
        width: 100%;
    }

        .prod-actions button {
            flex: 1;
            padding: 6px 0;
            border-radius: 6px;
            border: none;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            bottom: 10px;
            transition: background 0.2s, color 0.2s;
        }

            .prod-actions button:first-child {
                background: #59CCCC;
                color: #1e1e1e;
            }

                .prod-actions button:first-child:hover {
                    background: #48bbbb;
                    color: #fff;
                }

    #welcome-msg-tzone {
        font-size: 2rem;
        background: linear-gradient(90deg, #ff6a00, #ee0979, #ff6a00);
        background-size: 200% auto;
        background-clip: text;
        color: transparent;
        animation: gradientShift 3s linear infinite;
    }

    @@keyframes gradientShift {
        0%
        {
            background-position: 0% center;
        }

        100% {
            background-position: 200% center;
        }

 }


    @@media (max-width: 900px) {
        #prods-section

        {
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 16px;
        }

        #welcome-msg {
            margin-top: 70px;
        }

        }

    @@media (max-width: 600px) {
        #navbar

        {
            height: 48px;
            padding: 0 12px;
        }

        #welcome-msg {
            margin-top: 56px;
            margin-bottom: 18px;
        }

        #prods-section {
            grid-template-columns: 1fr;
            gap: 12px;
            padding: 0 4px;
        }

        .prod-card {
            padding-bottom: 8px;
        }

        }
</style>

<main>
    <div id="welcome-msg">
        <h3>Welcome to the <span id="welcome-msg-tzone">Trading Zone!!!</span></h3>
        <button id="create-btn" @onclick="() => CreateItem()">Sell your own item</button>
    </div>

    <section id="prods-section">
        @foreach (var prod in shopProducts)
        {
            <div class="prod-card">
                <div class="img-containter">
                    <img src="@prod.ImageUrl" alt="@prod.ItemName" />
                </div>
                <div class="prod-info">
                    <h3 class="prod-title">@prod.ItemName</h3>
                    <span class="prod-price">@prod.Price DKK</span>
                    <span class="prod-price">@prod.Rarity</span>
                    <div class="prod-actions">
                        <button @onclick="() => GoToItem(prod.ShopItemId)">Read More</button>
                    </div>
                </div>
            </div>
        }
    </section>
</main>

@code {
    List<TradeItems> shopProducts = new List<TradeItems>();

    private async Task GetProducts()
    {

        shopProducts = await DbService.GetShopItemsAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        await GetProducts();
    }
    void GoToItem(int id)
    {
        Navigation.NavigateTo($"/details?Id={id}");
    }

    private void CreateItem() {
        Navigation.NavigateTo("/create");
    }
}
